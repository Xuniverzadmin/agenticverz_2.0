# .env.example - AOS Phase 3 Configuration
# Copy to .env and fill in real values

# ===================
# Core Settings
# ===================
ENV=development
PORT=8000

# API Authentication
AOS_API_KEY=your-api-key-here

# ===================
# Database
# ===================
DATABASE_URL=postgresql://nova:novapass@localhost:5433/nova_aos

# ===================
# Redis (Rate Limiting, Concurrency)
# ===================
REDIS_URL=redis://localhost:6379/0

# ===================
# LLM Providers
# ===================
# Anthropic Claude (required for real planning)
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx

# OpenAI (optional, for llm_invoke skill)
OPENAI_API_KEY=sk-xxxxx

# ===================
# Planner Configuration
# ===================
PLANNER_BACKEND=anthropic
# Options: stub, anthropic

# ===================
# Artifact Storage
# ===================
ARTIFACT_BACKEND=local
# Options: local, s3

# Local storage path
ARTIFACT_LOCAL_PATH=/tmp/nova_artifacts

# S3/MinIO settings (when ARTIFACT_BACKEND=s3)
ARTIFACT_S3_BUCKET=nova-artifacts
ARTIFACT_S3_ENDPOINT=http://localhost:9000
ARTIFACT_S3_PREFIX=artifacts/
AWS_ACCESS_KEY_ID=minioaccess
AWS_SECRET_ACCESS_KEY=miniosecret

# ===================
# Multi-Tenancy
# ===================
TENANT_HEADER=X-Tenant-Id
ENFORCE_TENANCY=false
# Set to true in production

# ===================
# Idempotency
# ===================
IDEMPOTENCY_TTL_SECONDS=86400
# 24 hours default

# ===================
# Rate Limiting & Concurrency
# ===================
CONCURRENT_SLOT_TIMEOUT=3600
# 1 hour default

# Default estimated cost for budget pre-check
DEFAULT_EST_COST_CENTS=50

# ===================
# Budget Tracking
# ===================
BUDGET_ALERT_THRESHOLD=0.8
# Alert at 80% budget usage

# ===================
# Worker Configuration
# ===================
WORKER_CONCURRENCY=4
WORKER_POLL_INTERVAL=2.0
RUN_MAX_ATTEMPTS=5
EVENT_PUBLISHER=logging

# ===================
# Security Notes
# ===================
# - Never commit this file with real values
# - Use secrets manager in production
# - Rotate API keys regularly
# - Keep ENFORCE_TENANCY=true in production
