# AOS Backend - Production Environment
# Copy to .env and fill in real values

# Database
DATABASE_URL=postgresql://aos_user:CHANGE_ME@localhost:5432/aos_prod

# Redis
REDIS_URL=redis://localhost:6379/0

# Auth
AUTH_SECRET_KEY=CHANGE_ME_GENERATE_WITH_openssl_rand_hex_32
AUTH_ALGORITHM=HS256
AUTH_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS - Production origins only
CORS_ORIGINS=["https://agenticverz.com","https://www.agenticverz.com"]

# RBAC
RBAC_ENABLED=true
RBAC_ENFORCE=true

# Vault (optional - for secrets management)
VAULT_ADDR=http://127.0.0.1:8200
VAULT_TOKEN=CHANGE_ME

# External Services
OPENAI_API_KEY=CHANGE_ME
ANTHROPIC_API_KEY=CHANGE_ME

# R2/S3 Storage (for failure patterns)
R2_ACCESS_KEY_ID=CHANGE_ME
R2_SECRET_ACCESS_KEY=CHANGE_ME
R2_ENDPOINT=https://ACCOUNT_ID.r2.cloudflarestorage.com
R2_BUCKET=aos-production

# Monitoring
POSTHOG_API_KEY=CHANGE_ME
SENTRY_DSN=CHANGE_ME

# Email Notifications
RESEND_API_KEY=CHANGE_ME
ALERT_EMAIL_TO=ops@agenticverz.com
ALERT_EMAIL_FROM=alerts@agenticverz.com

# Slack Webhooks
SLACK_ALERTS_WEBHOOK=CHANGE_ME

# Server
HOST=127.0.0.1
PORT=8001
WORKERS=4
LOG_LEVEL=info
