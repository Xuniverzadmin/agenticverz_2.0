# /etc/systemd/system/agenticverz-r2-retry.timer
# Timer for R2 fallback retry worker
#
# Runs every 15 minutes to retry failed R2 uploads

[Unit]
Description=Run Agenticverz R2 fallback retry every 15 minutes

[Timer]
# Run every 15 minutes
OnCalendar=*:0/15
# Run immediately if we missed a scheduled run
Persistent=true
# Accuracy (allow 1 minute window)
AccuracySec=1min

[Install]
WantedBy=timers.target
