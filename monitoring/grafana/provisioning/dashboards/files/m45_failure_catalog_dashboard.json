{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "description": "M4.5 Failure Catalog & Cost Simulator Integration Monitoring",
  "editable": true,
  "gnetId": null,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "ðŸš¨ CRITICAL: Golden Mismatch Count",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum(increase(nova_golden_mismatch_total[1h])) or vector(0)",
          "legendFormat": "Mismatches (1h)"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          },
          "mappings": [],
          "unit": "none"
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "textMode": "value"
      }
    },
    {
      "title": "Error Rate (5m)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(nova_workflow_error_total[5m])) * 60",
          "legendFormat": "Errors/min"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 5 },
              { "color": "red", "value": 10 }
            ]
          },
          "unit": "none",
          "decimals": 2
        }
      }
    },
    {
      "title": "Health Status",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "up{job=\"nova-api\"}",
          "legendFormat": "API"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          },
          "mappings": [
            { "type": "value", "options": { "0": { "text": "DOWN" }, "1": { "text": "UP" } } }
          ]
        }
      }
    },
    {
      "title": "Feature Flags Status",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 },
      "targets": [
        {
          "expr": "nova_feature_flag_enabled{flag=\"failure_catalog_runtime_integration\"} or vector(0)",
          "legendFormat": "Catalog Flag"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null },
              { "color": "green", "value": 1 }
            ]
          },
          "mappings": [
            { "type": "value", "options": { "0": { "text": "DISABLED" }, "1": { "text": "ENABLED" } } }
          ]
        }
      }
    },
    {
      "title": "Error Rate by Category",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "targets": [
        {
          "expr": "sum(rate(nova_workflow_error_total[5m])) by (category)",
          "legendFormat": "{{category}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          },
          "unit": "ops"
        }
      }
    },
    {
      "title": "Error Rate by Code (Top 10)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "targets": [
        {
          "expr": "topk(10, sum(rate(nova_workflow_error_total[5m])) by (error_code))",
          "legendFormat": "{{error_code}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "bars",
            "fillOpacity": 80
          },
          "unit": "ops"
        }
      }
    },
    {
      "title": "Recovery Mode Distribution",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 12 },
      "targets": [
        {
          "expr": "sum(nova_error_recovery_suggestion_total) by (recovery_mode)",
          "legendFormat": "{{recovery_mode}}"
        }
      ],
      "options": {
        "pieType": "donut",
        "legend": { "displayMode": "table", "placement": "right" }
      }
    },
    {
      "title": "Catalog Match Rate",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 12 },
      "targets": [
        {
          "expr": "sum(rate(nova_failure_catalog_match_total{match_type=\"exact\"}[5m])) / (sum(rate(nova_failure_catalog_match_total[5m])) + 0.001) * 100",
          "legendFormat": "Exact Match %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 80 },
              { "color": "green", "value": 95 }
            ]
          },
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      }
    },
    {
      "title": "Cost Simulator Feasibility",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 12 },
      "targets": [
        {
          "expr": "sum(nova_cost_simulation_total) by (feasibility)",
          "legendFormat": "{{feasibility}}"
        }
      ],
      "options": {
        "pieType": "pie",
        "legend": { "displayMode": "table", "placement": "right" }
      }
    },
    {
      "title": "P95 Latency",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 20 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(nova_workflow_step_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(nova_workflow_step_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth"
          }
        }
      }
    },
    {
      "title": "Resource Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 20 },
      "targets": [
        {
          "expr": "process_resident_memory_bytes{job=\"nova-api\"} / 1024 / 1024",
          "legendFormat": "Memory (MB)"
        },
        {
          "expr": "rate(process_cpu_seconds_total{job=\"nova-api\"}[1m]) * 100",
          "legendFormat": "CPU %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20
          }
        }
      }
    },
    {
      "title": "Retryable vs Permanent Errors",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 28 },
      "targets": [
        {
          "expr": "sum(rate(nova_workflow_error_total{category=\"transient\"}[5m]))",
          "legendFormat": "Retryable"
        },
        {
          "expr": "sum(rate(nova_workflow_error_total{category=\"permanent\"}[5m]))",
          "legendFormat": "Permanent"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2
          }
        }
      }
    },
    {
      "title": "Budget Violations",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 28 },
      "targets": [
        {
          "expr": "sum(rate(nova_cost_simulation_total{feasibility=\"budget_exceeded\"}[5m]))",
          "legendFormat": "Budget Exceeded"
        },
        {
          "expr": "sum(rate(nova_cost_simulation_total{feasibility=\"permission_denied\"}[5m]))",
          "legendFormat": "Permission Denied"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": {
            "drawStyle": "bars"
          }
        }
      }
    }
  ],
  "refresh": "10s",
  "schemaVersion": 30,
  "style": "dark",
  "tags": ["m4.5", "failure-catalog", "cost-simulator", "canary"],
  "templating": {
    "list": [
      {
        "name": "environment",
        "type": "query",
        "query": "label_values(up, environment)",
        "current": { "text": "staging", "value": "staging" }
      }
    ]
  },
  "time": { "from": "now-1h", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "M4.5 Failure Catalog & Cost Simulator",
  "uid": "m45-failure-catalog",
  "version": 1
}
