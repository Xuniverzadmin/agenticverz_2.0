{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Stagetest Case Artifact",
  "description": "Schema for individual stagetest case evidence files",
  "type": "object",
  "required": [
    "run_id", "case_id", "uc_id", "stage", "operation_name",
    "route_path", "api_method", "request_fields", "response_fields",
    "synthetic_input", "observed_output", "assertions", "status",
    "determinism_hash", "signature", "evidence_files", "api_calls_used",
    "execution_trace", "db_writes"
  ],
  "properties": {
    "run_id": { "type": "string", "minLength": 1 },
    "case_id": { "type": "string", "minLength": 1 },
    "uc_id": { "type": "string", "pattern": "^UC-[0-9]{3}$" },
    "stage": { "type": "string", "enum": ["1.1", "1.2", "2"] },
    "operation_name": { "type": "string", "minLength": 1 },
    "route_path": { "type": "string" },
    "api_method": { "type": "string", "enum": ["GET", "POST", "PUT", "DELETE", "PATCH", "N/A"] },
    "request_fields": {
      "type": "object",
      "description": "Request field names and types"
    },
    "response_fields": {
      "type": "object",
      "description": "Response field names and types"
    },
    "synthetic_input": {
      "type": "object",
      "description": "Synthetic test input data"
    },
    "observed_output": {
      "type": "object",
      "description": "Observed test output data"
    },
    "assertions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "status", "message"],
        "properties": {
          "id": { "type": "string" },
          "status": { "type": "string", "enum": ["PASS", "FAIL"] },
          "message": { "type": "string" }
        }
      }
    },
    "status": { "type": "string", "enum": ["PASS", "FAIL", "SKIPPED"] },
    "determinism_hash": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
    "signature": { "type": "string" },
    "evidence_files": {
      "type": "array",
      "items": { "type": "string" }
    },
    "api_calls_used": {
      "type": "array",
      "description": "API calls exercised by this test case",
      "items": {
        "type": "object",
        "required": ["method", "path", "operation", "status_code", "duration_ms"],
        "properties": {
          "method": { "type": "string" },
          "path": { "type": "string" },
          "operation": { "type": "string" },
          "status_code": { "type": "integer" },
          "duration_ms": { "type": "number" }
        }
      }
    },
    "execution_trace": {
      "type": "array",
      "description": "Ordered runtime sequence captured during test execution",
      "items": {
        "type": "object",
        "required": [
          "seq", "ts_utc", "event_type", "layer",
          "component", "operation", "trigger", "status", "detail"
        ],
        "properties": {
          "seq": { "type": "integer", "minimum": 1 },
          "ts_utc": { "type": "string", "minLength": 1 },
          "event_type": { "type": "string", "minLength": 1 },
          "layer": { "type": "string", "minLength": 1 },
          "component": { "type": "string", "minLength": 1 },
          "operation": { "type": "string", "minLength": 1 },
          "trigger": { "type": "string", "minLength": 1 },
          "status": { "type": "string", "minLength": 1 },
          "detail": { "type": "object" }
        }
      }
    },
    "db_writes": {
      "type": "array",
      "description": "Observed SQL DML writes captured during test execution",
      "items": {
        "type": "object",
        "required": [
          "seq", "ts_utc", "layer", "component", "operation", "table",
          "sql_op", "rowcount", "statement_fingerprint", "success", "detail"
        ],
        "properties": {
          "seq": { "type": "integer", "minimum": 1 },
          "ts_utc": { "type": "string", "minLength": 1 },
          "layer": { "type": "string", "minLength": 1 },
          "component": { "type": "string", "minLength": 1 },
          "operation": { "type": "string", "minLength": 1 },
          "table": { "type": "string", "minLength": 1 },
          "sql_op": { "type": "string", "minLength": 1 },
          "rowcount": { "type": "integer" },
          "statement_fingerprint": { "type": "string", "minLength": 1 },
          "success": { "type": "boolean" },
          "detail": { "type": "object" }
        }
      }
    }
  },
  "additionalProperties": false
}
