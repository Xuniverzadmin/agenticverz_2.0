{
  "version": 1,
  "defaults": {
    "activation_mode": "lazy",
    "max_skills_per_task": 2,
    "low_confidence_action": "ask"
  },
  "rules": [
    {
      "intent_id": "hoc_session_start_or_resume",
      "match_any": [
        "bootstrap",
        "session start",
        "resume hoc",
        "load project context",
        "startup checklist"
      ],
      "skill": "hoc-session-bootstrap",
      "confidence": "high"
    },
    {
      "intent_id": "hoc_uc_closure_and_mapping",
      "match_any": [
        "uc closure",
        "usecase mapping",
        "red to green",
        "hoc linkage",
        "governance gates"
      ],
      "skill": "hoc-uc-closure",
      "confidence": "high"
    },
    {
      "intent_id": "git_commit_and_push",
      "match_any": [
        "commit",
        "push",
        "git commit",
        "git push",
        "publish branch"
      ],
      "skill": "git-commit-push",
      "confidence": "high"
    },
    {
      "intent_id": "codebase_audit_bugs_architecture_determinism",
      "match_any": [
        "audit codebase",
        "bugs and errors",
        "architecture deviation",
        "improper design",
        "determinism checks",
        "gatepass"
      ],
      "skill": "codebase-arch-audit-gatepass",
      "confidence": "high"
    },
    {
      "intent_id": "llm_task_todo_detailed_plan_handoff",
      "match_any": [
        "detailed plan",
        "todo plan",
        "claude execute",
        "plan md",
        "plan_implemented",
        "taskpack for claude"
      ],
      "skill": "llm-task-plan-handoff",
      "confidence": "high"
    },
    {
      "intent_id": "strategic_direction_northstar_cycle",
      "match_any": [
        "strategic thinker",
        "north star",
        "strategic direction",
        "iteration strategy",
        "vision mission analyze codebase",
        "measure progress each iteration"
      ],
      "skill": "strategic-thinker-northstar",
      "confidence": "high"
    },
    {
      "intent_id": "uc_testcase_generator_staged_handoff",
      "match_any": [
        "test case generator",
        "use case registered tests",
        "staged test pack",
        "stage 1.1 stage 1.2 stage 2",
        "executed md report",
        "routes and means to test"
      ],
      "skill": "uc-testcase-generator",
      "confidence": "high"
    }
  ]
}
